{
  "compilerOptions": {
    "esModuleInterop": true,
    "sourceMap": true,
    "lib": [
      "ES2020",
      "DOM"
    ],
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "Node",
    "target": "es5",
    "strict": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@Components/*": [
        "Components/*"
      ],
      "@Router/*": [
        "Router/*"
      ],
      "@public/*": [
        "public/*"
      ],
      "@images/*": [
        "images/*"
      ],
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "Node",
      "target": "es5",
      "esModuleInterop": true
    }
  }
}